{
  "name": "server",
  "description": "Timekeeper ExpressJS server",
  "version": "1.0.0",
  "author": "Manuel Vargas",
  "license": "ISC",
  "main": "src/server.js",
  "jest": {
    "clearMocks": true,
    "coverageProvider": "v8",
    "testEnvironment": "node",
    "coverageDirectory": "tests/coverage"
  },
  "scripts": {
    "start": "node src/server.js",
    "test": "jest --coverage",
    "pretest": "NODE_ENV=test npm run reset-db",
    "reset-db": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate"
  },
  "dependencies": {
    "express": "4.17.1",
    "express-joi-validation": "5.0.0",
    "pg": "8.6.0",
    "pg-hstore": "2.3.3",
    "sequelize": "6.6.2"
  },
  "devDependencies": {
    "jest": "26.6.3",
    "jest-when": "3.2.1",
    "sequelize-cli": "6.2.0",
    "supertest": "6.1.3"
  }
}
